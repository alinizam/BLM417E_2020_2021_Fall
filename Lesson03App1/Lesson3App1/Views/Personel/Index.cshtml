@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using Lesson3App1.Models;
@model List<Personel>;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Personel listesi</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th>Soyadı</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Personel p in Model)
            {
                <tr>
                    <td>@p.PersonelId</td>
                    <td>@p.Adi</td>
                    <td>@p.Soyadi</td>
                    <td><a asp-area="" asp-controller="Personel" asp-action="Delete" asp-route-pId=@p.PersonelId>Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
